@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="../../Content/logo.png" alt="Project Logo" class="img-fluid mb-0" style="max-height: 450px;">
                <h1 class="display-4">Welcome to Zero Hunger</h1>
                <p class="lead">Join us in our mission to eradicate hunger and ensure food security for all.</p>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Get Started</h2>
                        <p class="card-text">Choose an option below to get started:</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("RestaurantRegistration", "Auth")" class="btn btn-primary btn-lg">Register</a>
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-secondary btn-lg">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
