@{
    ViewBag.Title = "Edit Profile";
}

<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body" align="center">
                    <p class="card-text text-center">Name: @ViewBag.Name</p>
                    <p class="card-text text-center">Username: @ViewBag.Username</p>
                    <p class="card-text text-center">ID: @ViewBag.Id</p>
                    <hr>
                    <form action="@Url.Action("ChangeName", "Restaurant")" method="post">
                        <div class="form-group">
                            <label for="newName">New Name:</label>
                            <input type="text" name="Name" id="newName" class="form-control" placeholder="Enter new name" required>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Change Name</button>
                        </div>
                    </form>
                    <hr>
                    <form action="@Url.Action("ChangeUsername", "Restaurant")" method="post">
                        <div class="form-group">
                            <label for="newUsername">New Username:</label>
                            <input type="text" name="Username" id="newUsername" class="form-control" placeholder="Enter new username" required>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Change Username</button>
                        </div>
                    </form>
                    <hr>
                    <form action="@Url.Action("ChangePassword", "Restaurant")" method="post">
                        <div class="form-group">
                            <label for="currentPassword">Current Password:</label>
                            <input type="password" name="CurrentPassword" id="currentPassword" class="form-control" placeholder="Enter current password" required>
                        </div>
                        <div class="form-group">
                            <label for="newPassword">New Password:</label>
                            <input type="password" name="NewPassword" id="newPassword" class="form-control" placeholder="Enter new password" required>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password:</label>
                            <input type="password" name="ConfirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm new password" required>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Change Password</button>
                        </div>
                    </form>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                    }


                </div>
                <div class="text-left">
                    <a href="@Url.Action("Dashboard", "Restaurant")" class="btn btn-link">Back to Dashboard</a>
                </div>
            </div>
    </div>
</div>
