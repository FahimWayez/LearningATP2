@{
    ViewBag.Title = "Restaurant Dashboard";
}

<h2 class="card-title text-center mb-4">Welcome to your Dashboard, @ViewBag.Username</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h3 class="card-title">Open Collection Request</h3>
                    <p class="card-text">Upload your food items for collection.</p>
                    <a href="@Url.Action("CollectionRequest", "Restaurant")" class="btn btn-primary btn-block">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h3 class="card-title">History</h3>
                    <p class="card-text">View your logs.</p>
                    <a href="@Url.Action("Filter", "Restaurant")" class="btn btn-primary btn-block">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h3 class="card-title">Profile Settings</h3>
                    <p class="card-text">Edit your restaurant profile settings.</p>
                    <a href="@Url.Action("EditProfile", "Restaurant")" class="btn btn-primary btn-block">Go</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form id="logoutForm" action="@Url.Action("Logout", "Auth")" method="post">
                @Html.AntiForgeryToken()
                <button type="button" onclick="confirmLogout()" class="btn btn-danger btn-block">Logout</button>
            </form>
        </div>
    </div>
</div>
<script>
    function confirmLogout() {
        if (confirm("Are you sure you want to logout?")) {
            document.getElementById("logoutForm").submit();
        }
    }
</script>
